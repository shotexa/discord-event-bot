{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2019",
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": ".",
      "noImplicitReturns": true,
      "forceConsistentCasingInFileNames": true,
      "noUnusedLocals": true
    },
    "include": ["src/**/*.ts"]
  }
